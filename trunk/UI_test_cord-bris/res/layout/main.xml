<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:id="@+id/FrameLayout" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="bottom">
	<RelativeLayout android:id="@+id/Titlebar" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:background="@drawable/top" >
		<TextView android:text="Untitled Message" 
			android:id="@+id/messageTitle" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_centerVertical="true"/>
		<Button android:id="@+id/newBtn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:background="@drawable/button_new" 
			android:layout_alignParentRight="true"/>
	</RelativeLayout>
	<LinearLayout android:id="@+id/Buttons" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"  
		android:layout_gravity="bottom">
		<Button android:id="@+id/addBtn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:background="@drawable/button_add" />
		<Button android:id="@+id/saveBtn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:background="@drawable/button_save" />
		<Button android:id="@+id/undoBtn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:background="@drawable/button_undo" />
		<Button android:id="@+id/sendBtn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:background="@drawable/button_send" />
	</LinearLayout>
</FrameLayout>
