<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/MediaProperties"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:gravity="center">

	<RelativeLayout android:id="@+id/TopBar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/bar" android:fadingEdge="none">

		<TextView android:id="@+id/Title" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:text="@string/app_name" />

		<Button android:id="@+id/backBtn" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/backbutton"
			android:layout_alignParentRight="true" android:layout_marginLeft="5px" />
	</RelativeLayout>

	<TableLayout android:id="@+id/properties"
		android:layout_height="wrap_content" android:fadingEdge="none"
		android:layout_centerHorizontal="true" android:layout_below="@+id/TopBar"
		android:layout_width="fill_parent">
		<TableRow android:id="@+id/textInfo" android:visibility="gone">
			<TextView android:id="@+id/inputStringLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@+string/enter_text_label" android:gravity="left" />
		</TableRow>
		<TableRow android:id="@+id/inputStringInfo" android:layout_width="fill_parent" android:visibility="gone">
			<EditText android:id="@+id/inputString"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:gravity="right" android:layout_marginLeft="15px"
				android:lines="1" />

		</TableRow>
		<TableRow android:id="@+id/fontSizeInfo" android:visibility="gone">
			<TextView android:id="@+id/fontSizeLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@+string/font_size_label" android:gravity="left" />

			<Spinner android:id="@+id/fontSizeSpinner"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:prompt="@string/font_size_label" />

		</TableRow>
		<TableRow android:id="@+id/orientationInfo" android:visibility="gone">
			<TextView android:id="@+id/fontSizeLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@+string/orientation_label" android:gravity="left" />

			<RadioGroup android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="vertical">
				<RadioButton android:id="@+id/radio_horizontal"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@+string/horizontal_label" />
				<RadioButton android:id="@+id/radio_vertical"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@+string/vertical_label" />
			</RadioGroup>

		</TableRow>
		<TableRow android:id="@+id/startTimeInfo">
			<TextView android:id="@+id/startTimeLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@+string/start_time_label" android:gravity="left" />

			<EditText android:id="@+id/startTime" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="right"
				android:layout_marginLeft="15px" android:numeric="integer"
				android:maxLength="4" android:width="70dip" />

		</TableRow>
		<TableRow android:id="@+id/durationInfo" android:visibility="visible">
			<TextView android:id="@+id/durationLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@+string/duration_label" android:gravity="left" />

			<EditText android:id="@+id/duration" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="right"
				android:layout_marginLeft="15px" android:numeric="integer"
				android:maxLength="4" android:width="70dip" />
		
</TableRow>
		<TableRow android:id="@+id/repeatInfo" android:visibility="gone">
			<TextView android:id="@+id/repeatLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@+string/repeat_label" android:gravity="left" />

			<CheckBox android:id="@+id/repeatCheckBox"
				android:layout_marginLeft="15px" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</TableRow>
		<TableRow android:id="@+id/hwInfo" android:gravity="center" android:visibility="gone">
			<TextView android:id="@+id/heightLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@+string/height_label" android:gravity="right" />

			<EditText android:id="@+id/height" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="left"
				android:numeric="integer" android:maxLength="4" android:width="70dip"
				android:layout_marginLeft="15px" />

			<TextView android:id="@+id/widthLabel" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@+string/width_label"
				android:gravity="left" />

			<EditText android:id="@+id/width" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="right"
				android:layout_marginLeft="15px" android:numeric="integer"
				android:maxLength="4" android:width="70dip" />
		</TableRow>
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rotation" android:visibility="gone"><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rotate" android:layout_gravity="center" android:gravity="center" android:id="@+id/rotateBtn"></Button></TableRow><TableLayout android:id="@+id/optional"
			android:layout_height="wrap_content" android:fadingEdge="none"
			android:layout_centerHorizontal="true" android:layout_width="fill_parent">

			<TableRow android:id="@+id/optionalInfo">
				<TextView android:id="@+id/optionalLabel"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Position (optional):" android:gravity="left" />

			
</TableRow>
			<TableRow android:id="@+id/xyInfo">
				<TextView android:id="@+id/xLabel" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="X:"
					android:gravity="right" />

				<EditText android:id="@+id/x" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:gravity="left"
					android:numeric="integer" android:maxLength="4" android:width="70dip"
					android:layout_marginLeft="15px" />

				<TextView android:id="@+id/yLabel" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Y:"
					android:gravity="left" />

				<EditText android:id="@+id/y" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:gravity="right"
					android:layout_marginLeft="15px" android:numeric="integer"
					android:maxLength="4" android:width="70dip" />
			</TableRow>
		</TableLayout>

	</TableLayout>

	<RelativeLayout android:id="@+id/bottomButtons"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:fadingEdge="none" android:layout_centerHorizontal="true">
		<Button android:id="@+id/okBtn" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/okbutton"
			android:layout_alignParentBottom="true" android:gravity="left" />

		<Button android:id="@+id/cancelBtn" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/cancelbutton"
			android:layout_toRightOf="@+id/okBtn" android:gravity="right"
			android:layout_alignParentBottom="true" android:layout_marginLeft="15px" />
	</RelativeLayout>
</RelativeLayout>